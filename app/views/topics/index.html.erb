<div>
  <div class="text-center"><h3> What topics do you want to explore? </h3></div>
</div>

<hr>

<div class="text-center">
  <div>
    <table border="1" class="table table-striped table-hover border">
      <tr class="table-info">
        <th>Topic</th>
        <th>Asked by</th>
        <th>View</th>
        <th>Created</th>
        <th>Updated</th>
      </tr>

      <% @list_of_topics.each do |a_topic| %>
      <tr>
        <td><%= a_topic.body %></td>
        <td><%= a_topic.user.first_name %> <%= a_topic.user.last_name %></td>
        <td><a href="/topics/<%= a_topic.id %>">See posts on topic</a></td>
        <td><%= time_ago_in_words(a_topic.created_at) %> ago</td>
        <td><%= time_ago_in_words(a_topic.updated_at) %> ago</td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div class="text-center">
  <div>
    <h4>Create a new topic</h4>

    <form action="/insert_topic" method="post">
      <div>
        <label for="body_box"></label>
        <textarea id="body_box" name="query_body" rows="5" placeholder = 
        "Enter a new discussion topic..."></textarea>
      </div>

      <button class="v-button">Create new topic</button>
    </form>
  </div>
</div>
