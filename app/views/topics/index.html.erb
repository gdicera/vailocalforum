<div>
  <div>
    <h1>
      List of all topics
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new topic
    </h2>

    <form action="/insert_topic" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <button>
        Create topic
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_topics.each do |a_topic| %>
      <tr>
        <td>
          <%= a_topic.id %>
        </td>

        <td>
          <%= a_topic.user_id %>
        </td>

        <td>
          <%= a_topic.body %>
        </td>

        <td>
          <%= time_ago_in_words(a_topic.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_topic.updated_at) %> ago
        </td>

        <td>
          <a href="/topics/<%= a_topic.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
