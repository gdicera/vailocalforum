<div>
  <div>
    <h1>
      List of all posts
    </h1>
  </div>
</div>

<hr>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>Post</th>
        <th>Asked by</th>
        <th>View</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>
        <td><%= a_post.body %></td>
        <td><%= a_post.user.first_name%> <%= a_post.user.last_name%></td>
        <td><a href="/posts/<%= a_post.id %>">See post</a></td>
        <td><%= time_ago_in_words(a_post.created_at) %> ago</td>
        <td><%= time_ago_in_words(a_post.updated_at) %> ago</td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
